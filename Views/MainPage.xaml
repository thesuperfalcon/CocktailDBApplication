<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailDBApplication.MainPage">

    <NavigationPage.TitleView>
        <Grid BackgroundColor="White"/>
    </NavigationPage.TitleView>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="White">

            <Image Source="https://static.vecteezy.com/system/resources/previews/000/442/801/original/vector-cocktail-icon.jpg" 
                   WidthRequest="100" 
                   HorizontalOptions="Start"
                   VerticalOptions="Start"
                   Margin="0,0,0,10"/>

            <SearchBar x:Name="searchBar" SearchButtonPressed="OnButtonPressedShowRecepies"/>

            <ListView x:Name="drinkListView" 
                      ItemSelected="DrinkSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding strDrink}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

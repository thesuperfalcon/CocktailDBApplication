<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailDBApplication.MainPage"
             Shell.NavBarIsVisible="false">

    <ScrollView>
        <StackLayout Padding="30,0" Spacing="25">

            <Image Source="https://static.vecteezy.com/system/resources/previews/000/442/801/original/vector-cocktail-icon.jpg" 
                   WidthRequest="100" 
                   HorizontalOptions="Start"
                   VerticalOptions="Start"
                   Margin="0,0,0,10"/>

            <SearchBar x:Name="searchBar" SearchButtonPressed="OnButtonPressedShowRecepies"/>

            <ListView x:Name="listView"
                      ItemSelected="ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding}" />
                                <!-- Add additional labels or controls to display more properties of Drink or Ingredient -->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailDBApplication.Views.DisplayIngredientPage"
             Shell.NavBarIsVisible="false">
    <StackLayout Orientation="Vertical">
        <Label Text="{Binding strIngredient}" FontSize="Title" HorizontalOptions="CenterAndExpand" />
        <Label Text="{Binding strType}" />
        <Label Text="{Binding strAlcohol} {Binding strABV}" />
        <Label Text="{Binding strDescription}" />
    </StackLayout>
</ContentPage>

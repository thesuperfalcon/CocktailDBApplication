<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailDBApplication.Views.DisplayIngredientChoicePage"
             Shell.NavBarIsVisible="false">
    <StackLayout>
        <StackLayout HorizontalOptions="Center" Margin="5">
            <Label Text="Display Drinks / Display Ingredient" VerticalOptions="Center"/>
            <Switch x:Name="toggleSwitch" IsToggled="False" HorizontalOptions="CenterAndExpand" />
        </StackLayout>


        <ScrollView>
            <FlexLayout x:Name="ingredientFlexLayout"
                        Direction="Row"
                        Wrap="Wrap"
                        AlignItems="Start"
                        JustifyContent="Start"/>
        </ScrollView>
    </StackLayout>
</ContentPage>
